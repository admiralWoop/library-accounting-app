@model LibraryAccountingApp.PL.WebApp.Models.GenreViewModel

<div class="row">
    <div class="col-3 d-flex justify-content-end align-items-start">
        <a class="btn btn-primary mb-2 text-white" asp-area="" asp-controller="Home" asp-action="Index">
            Back
        </a>
    </div>
    <div class="col-6">
        <div>
            <h4>Add new genre</h4>
        </div>
        <form asp-action="AddGenre">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">
                    Title
                </label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" type="text" placeholder="Title" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">
                    Parent genre
                </label>
                <div class="col-sm-10">
                    <select asp-for="Parent.Name" class="form-control">
                        <option></option>
                        @foreach (string item in ViewBag.Genres)
                        {
                            <option>@item</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button class="btn btn-primary" type="submit">
                        Create
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>


