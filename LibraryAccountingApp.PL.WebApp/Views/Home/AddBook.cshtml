@model LibraryAccountingApp.PL.WebApp.Models.BookViewModel

<div class="row">
    <div class="col-3 d-flex justify-content-end align-items-start">
        <a class="btn btn-primary mb-2 text-white" asp-area="" asp-controller="Home" asp-action="Index">
            Back
        </a>
    </div>
    <div class="col-6">
        <div>
            <h4>Add new book</h4>
        </div>
        <form asp-action="AddBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">
                    Title
                </label>
                <div class="col-sm-10">
                    <input asp-for="Title" class="form-control" type="text" placeholder="Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">
                    Author
                </label>
                <div class="col-sm-10">
                    <input asp-for="AuthorName" class="form-control" type="text" placeholder="Name" />
                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">
                    Description
                </label>
                <div class="col-sm-10">
                    <textarea asp-for="Description" class="form-control" type="text" placeholder="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">
                    Genre
                </label>
                <div class="col-sm-10">
                    <select asp-for="Genre.Name" class="form-control">
                        @foreach (string item in ViewBag.Genres)
                        {
                            <option>@item</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button class="btn btn-primary" type="submit">
                        Create
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>


