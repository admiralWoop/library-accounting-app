@model LibraryAccountingApp.PL.WebApp.Models.GenreViewModel

<div class="row">
    <div class="col-3 d-flex justify-content-end align-items-start">
        <a class="btn btn-primary mb-2 text-white" asp-area="" asp-controller="Home" asp-action="Index">
            Back
        </a>
    </div>
    <div class="col-6">
        <div>
            <h4>Edit existing book</h4>
        </div>
        <form asp-action="EditGenre">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">
                    Name
                </label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" type="text" placeholder="Title" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">
                    Parent Genre
                </label>
                <div class="col-sm-10">
                    <select asp-for="Parent.Name" class="form-control">
                        <option>@Model.Parent?.Name</option>
                        @foreach (string item in ViewBag.Genres)
                        {
                            <option>@item</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button class="btn btn-primary" type="submit">
                        Edit
                    </button>
                </div>
            </div>
        </form>
    </div>      
</div>


